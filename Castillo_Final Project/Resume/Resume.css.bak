* {
	box-sizing: border-box;
	margin: 0;
	padding: 0;
	font-family: 'Montserrat', sans-serif;
	}
body {
	background: #BCC6CC;
	}
	
.container {
	background: #f5f5f5;
	max-width: 800px;
	margin: 60px auto;
	height: 1250px;
	padding: 20px;
	box-shadow: 0 2px 20px rgba(0, 0, 0, 0.3);
}

.main {
	display: flex;
	flex-wrap: wrap;
}
.left {
	flex: 1;
	padding: 30px;
	
}
.left p {
	line-height: 2;
}
.left h2 {
	background: #98AFC7;
	padding: 15px;
	color:#000000;
	margin: 10px 0;
	font-size: 20px;
	border-radius: 30px 30px 0;
}

.left ul li {
	line-height: 2;
}

.right li {
	line-height: 2;
}
.right {
	flex: 1;
	padding: 30px;

}
.right p {
	line-height: 2;
}

.right h2 {
	background: #98AFC7;
	padding: 15px;
	color:#000000;
	margin: 10px 0;
	font-size: 20px;
	border-radius: 30px 0 30px ;
}

.name h2 {
	font-size: 30px;

}
